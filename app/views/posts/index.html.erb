<div>
  <% @posts.each do |post| %>
  <div class="border border-slate-100 -m-px pt-3 px-4">
    <article>
      <div>
        <div class="pb-3 flex">
            <div class="mr-2">
              <% if post.user.image_url.present? %>
                <%= image_tag(user.image_url, size: "40x40", class: "rounded-full") %>
              <% else %>
                <%= image_tag("user-images/initial_icon.png", size: "40x40", class: "rounded-full") %>
              <% end %>
            </div>
            <div class="flex flex-col">
              <div class="font-bold text-sm ">
                <%= post.user.user_name %>
              </div>
              <div>
                <%= post.content %>
              </div>
              <div class="flex">
                
              </div>
            </div>
          </div>
        </div>
      </div>
    </article>
  </div>
  <% end %>
</div>
