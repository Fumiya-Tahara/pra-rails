<header class="grid grid-cols-5 text-slate-900 h-screen p-2 border-e border-slate-100">
    <div class="col-span-1"></div>
    <div class="col-span-4 px-2">
        <div class="text-3xl">PraRails</div>
        <div class="mt-6 ml-2">
            <div>
                <ul class="flex flex-col text-lg">
                    <li class="flex">
                        <a href="#" class="flex pl-4 pr-8 py-2 rounded-full hover:bg-slate-200">
                            <%= image_tag("icons/home_icon.svg") %>
                            <div class="ml-2">Home</div>
                        </a>
                    </li>
                    <li class="flex">
                        <a href="#" class="flex pl-4 pr-8 py-2 rounded-full hover:bg-slate-200">
                            <%= image_tag("icons/search_icon.svg") %>
                            <div class="ml-2">Explore</div>
                        </a>
                    </li>
                    <li class="flex">
                        <a href="#" class="flex pl-4 pr-8 py-2 rounded-full hover:bg-slate-200">
                            <%= image_tag("icons/notification_icon.svg") %>
                            <div class="ml-2">Notifications</div>
                        </a>
                    </li>
                    <li class="flex">
                        <a href="#" class="flex pl-4 pr-8 py-2 rounded-full hover:bg-slate-200">
                            <%= image_tag("icons/mail_icon.svg") %>
                            <div class="ml-2">Messages</div>
                        </a>
                    </li>
                </ul>
            </div>
            <div class="my-2">
                <div data-controller="modal">
                    <dialog data-modal-target="dialog" class="m-0 fixed left-1/2 -translate-x-1/2 rounded-lg backdrop:bg-black/40" style="top: 5%; min-width: 500px;">
                        <div class="h-14 px-4 flex">
                            <button data-action="modal#close" class="w-9 h-9 my-auto rounded-full flex justify-center hover:bg-gray-300">
                                <%= image_tag("icons/close_icon.svg", width: "20", height: "2", class: "fill-gray-900") %>
                            </button>
                        </div>
                        <div class="px-4 pb-2">
                            <%= form_with model: Post.new do |form| %>
                            <div>
                                <%= form.text_area :content, class: "w-full h-32 p-4 rounded-2xl border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-400 shadow-sm resize-none transition duration-300", placeholder: "What's happning?" %>
                            </div>
                            <div class="flex flex-row-reverse">
                                <%= form.submit "Post", class: "basis-1/6 flex justify-center items-center px-2 py-1 w-full text-white rounded-full bg-black" %>
                            </div>
                            <% end %>
                        </div>
                    </dialog>
                    <button data-action="modal#open" class="min-h-12 flex justify-center items-center px-8 w-full text-white rounded-full bg-black">
                        <span class="text-lg font-bold">Post</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</header>